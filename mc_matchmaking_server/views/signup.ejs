<!-- views/signup.ejs -->
<% layout('layout') -%>

<div class="large-6 large-centered columns">

    <h1><span class="fa fa-sign-in"></span> Signup</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert-box warning radius"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post" data-abide>
        <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" name="username">
        </div>

        <div class="password-field">
            <label>Password <small>required</small>
            <input class="form-control" type="password" id="password" name="password">
            </label>
            <small class="error">Your password must match the requirements</small>
        </div>
        <div class="password-confirmation-field">
            <label>Confirm Password <small>required</small>
            <input type="password" id="password" data-equalto="password">
            </label>
            <small class="error">The password did not match</small>
        </div>

<!--         <div class="form-group">
            <label>Password</label>
            <div class="alert-box warning radius">Please do NOT use the same password as your minecaft account</div>
            <input type="password" class="form-control" name="password">
        </div> -->
        <div class="form-group">
            <label>Minecraft Name</label>
            <input type="text" class="form-control" name="minecraft_name">
        </div>

        <button type="submit" class="button alert large">Signup</button>
    </form>

    <hr>

    <p>Already have an account? <a href="/login">Login</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>

